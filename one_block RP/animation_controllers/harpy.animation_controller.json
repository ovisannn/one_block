{
    "format_version": "1.20.10",
    "animation_controllers": {
        "controller.animation.harpy":{
            "states": {
                "idle" :{
                    "animations": [
                        "idle"
                    ],
                    "transitions": [
                        {
                            "walk": "query.modified_move_speed > 0.02 && !query.is_delayed_attacking"
                        },
                        {
                            "attack": "query.is_delayed_attacking"
                        }
                    ]
                },
                "walk": {
                    "animations": [
                        "fly"
                    ],
                    "transitions": [
                        {
                            "idle": "!query.modified_move_speed < 0.02 && !query.is_delayed_attacking"
                        },
                        {
                            "attack": "query.is_delayed_attacking"
                        }
                    ]
                },
                "attack":{
                    "animations": [
                        "attack"
                    ],
                    "transitions": [
                        {
                            "idle": "!query.modified_move_speed < 0.02 && !query.is_delayed_attacking"
                        },
                        {
                            "walk": "query.modified_move_speed > 0.02 && !query.is_delayed_attacking"
                        }
                    ]
                }
            }
        }
    }
}