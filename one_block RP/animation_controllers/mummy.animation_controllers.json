{
    "format_version": "1.20.10",
    "animation_controllers": {
        "controller.animation.mummy": {
            "states": {
                "default": {
                    "animations": [
                        "idle"
                    ],
                    "transitions": [
                        {
                            "walk": "query.modified_move_speed > 0.02"
                        },
                        {
                            "attack": "q.is_delayed_attacking"
                        }
                    ]
                },
                "walk": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "default": "query.modified_move_speed < 0.02 && q.is_delayed_attacking"
                        },
                        {
                            "attack": "q.is_delayed_attacking"
                        }
                    ]
                },
                "attack":{
                    "animations": [
                        "attack"
                    ],
                    "transitions": [
                        {
                            "default": "query.modified_move_speed < 0.02 && q.is_delayed_attacking"
                        },
                        {
                            "walk": "query.modified_move_speed > 0.02"
                        }
                    ]
                }
            }
        }
    }
}