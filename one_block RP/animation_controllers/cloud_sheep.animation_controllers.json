{
    "format_version": "1.20.10",
    "animation_controllers": {
        "controller.animation.cloud_sheep":{
            "states": {
                "default":{
                    "animations": [
                        "fly"
                    ],
                    "transitions": [
                        {
                            "walk": "query.modified_move_speed > 0.02"
                        },
                        {
                            "fly": "!query.modified_move_speed > 0.02"
                        }
                    ]
                },
                "fly" :{
                    "animations": [
                        "fly"
                    ],
                    "transitions": [
                        {
                            "walk": "query.modified_move_speed > 0.02"
                        }
                    ]
                },
                "walk": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "fly": "!query.modified_move_speed > 0.02"
                        }
                    ]
                }
            }
        }
    }
}