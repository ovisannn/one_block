{
    "format_version": "1.20.10",
    "minecraft:entity": {
        "description": {
            "identifier": "oneblock:knockback_entity",
            "is_spawnable": true,
            "is_summonable": true
        },
        "component_groups": {
            "despawning":{
                "minecraft:instant_despawn": {
                    "remove_child_entities": true
                }
            }
        },
        "components": {
            "minecraft:physics": {
                "has_collision": false,
                "has_gravity": false
            },
            "minecraft:behavior.nearest_attackable_target": {
                "attack_interval": 0,
                "attack_interval_min": 0,
                "attack_owner": false,
                "must_reach": false,
                "must_see": false,
                "must_see_forget_duration": 3,
                "persist_time": 0,
                "reselect_targets": false,
                "scan_interval": 10,
                "set_persistent": false,
                "target_invisible_multiplier": 0.7,
                "target_search_height": -1,
                "target_sneak_visibility_multiplier": 0.8,
                "within_radius": 0,
                "entity_types": [
                    {
                      "filters": {
                        "any_of": [
                          { "test": "is_family", "subject": "other", "value": "player" }
                        ]
                      },
                      "max_dist": 35
                    }
                  ]
            },
            "minecraft:behavior.knockback_roar": {
                "attack_time": 0.1,
                "cooldown_time": 0,
                "duration": 0.5,
                "knockback_damage": 12,
                "knockback_horizontal_strength": 4,
                "knockback_range": 4,
                "knockback_vertical_strength": 4,
                "on_roar_end": {
                    "event": "despawn_event"
                },
                "knockback_filters":{
                    "test":"is_family",
                    "subject":"other",
                    "operator":"==",
                    "value":"player"
                  }
            },
            "minecraft:attack": {
                "damage": 0,
                "effect_duration": 1
            }
        },
        "events": {
            "despawn_event":{
                "add": {
                    "component_groups": [
                        "despawning"
                    ]
                }
            }
        }
    }
}